ArrayList < String > condition(StringBuffer s) :
{
  ArrayList < String > variableList = new ArrayList < String > ();
}
{
  < IDENT >
  {
    variableList.add(token.image);
    createCopyBefehle(s, token.image);
  }
  < NOTEQUAL > 
  < IDENT >
  {
    variableList.add(token.image);
    createCopyBefehle(s, token.image);
  }
  {
	return variableList;
  }
}

